<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/shape_progress_dia</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--启动页的Style-->
    <style name="SplashTheme" parent="@style/AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--标题栏的Style-->
    <style name="TitleBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--TextView Base Style-->
    <style name="BaseTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/font14</item>
    </style>

    <!--标题栏字体样式-->
    <style name="TitleBarTextStyle" parent="BaseTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font16</item>
    </style>

    <!--EditText的Base Style-->
    <style name="BaseEditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/font14</item>
    </style>

    <!-- Button的Base Style -->
    <style name="BaseButtonStyle">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/font14</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="BaseItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/distance16</item>
        <item name="android:paddingRight">@dimen/distance16</item>
    </style>

    <style name="BaseItemLayoutWhite" parent="BaseItemLayout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BaseItemLayoutSelect" parent="BaseItemLayout">
        <item name="android:background">@drawable/selector_item_bg</item>
    </style>

    <style name="BaseItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/font14</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingTop">@dimen/distance4</item>
        <item name="android:paddingBottom">@dimen/distance4</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="LoginItemLayout" parent="BaseItemLayoutWhite">
        <item name="android:layout_marginLeft">@dimen/distance48</item>
        <item name="android:layout_marginRight">@dimen/distance48</item>
    </style>

    <style name="LoginEditTextStyle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/font14</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingLeft">@dimen/distance8</item>
        <item name="android:paddingRight">@dimen/distance8</item>
        <item name="android:paddingTop">@dimen/distance8</item>
        <item name="android:paddingBottom">@dimen/distance8</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/selector_btn_blue</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/font14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!--分隔线的Style-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3px</item>
        <item name="android:background">@color/background</item>
    </style>


</resources>
