<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/title_bar_common"/>

    <LinearLayout
        android:id="@+id/ll_shop_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_shop_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_shop_name"
            style="@style/BaseTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_shop_mobile"
            style="@style/BaseTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_change_shop_name"
        style="@style/BaseItemLayout">

        <TextView
            style="@style/BaseItemTitle"
            android:text="@string/change_shop_name"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_right"/>
    </RelativeLayout>

    <View style="@style/Divider"/>

    <RelativeLayout
        android:id="@+id/rl_change_pwd"
        style="@style/BaseItemLayout">

        <TextView
            style="@style/BaseItemTitle"
            android:text="@string/change_pwd"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_right"/>
    </RelativeLayout>

    <View style="@style/Divider"/>

    <RelativeLayout
        android:id="@+id/rl_feedback"
        style="@style/BaseItemLayout">

        <TextView
            style="@style/BaseItemTitle"
            android:text="@string/feedback"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_right"/>
    </RelativeLayout>

    <View style="@style/Divider"/>

    <RelativeLayout
        android:id="@+id/rl_about"
        style="@style/BaseItemLayout">

        <TextView
            style="@style/BaseItemTitle"
            android:text="@string/about"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_right"/>
    </RelativeLayout>

</LinearLayout>