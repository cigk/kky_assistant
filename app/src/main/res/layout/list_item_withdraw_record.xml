<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/distance16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/distance2"
                android:paddingTop="@dimen/distance2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/income_account_pay_account"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font14"/>

                <TextView
                    android:id="@+id/tv_pay_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13911223344"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font14"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/distance2"
                android:paddingTop="@dimen/distance2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/income_account_pay_type"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font14"/>

                <TextView
                    android:id="@+id/tv_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font14"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/distance2"
                android:paddingTop="@dimen/distance2">

                <TextView
                    android:id="@+id/tv_pay_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-05-12 12:34"
                    android:textColor="@color/text_hint_color"
                    android:textSize="@dimen/font12"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_withdraw_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/distance8"
            android:paddingRight="@dimen/distance4"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font18"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/distance32"
            android:text="元"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font14"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/distance8"
        android:paddingRight="@dimen/distance8"
        android:textColor="@color/white"
        android:textSize="@dimen/font14"/>

</RelativeLayout>