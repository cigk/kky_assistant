<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <include layout="@layout/title_bar_common"/>

    <LinearLayout
        style="@style/LoginItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance32"
        android:layout_marginRight="@dimen/distance32"
        android:layout_marginTop="@dimen/distance32"
        android:background="@null">


        <TextView
            style="@style/BaseTextViewStyle"
            android:layout_width="@dimen/distance60"
            android:background="@null"
            android:text="原密码"/>

        <EditText
            android:id="@+id/et_pwd_old"
            style="@style/LoginEditTextStyle"
            android:background="@null"
            android:hint="@string/input_pwd_old"
            android:inputType="textPassword"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/distance32"
        android:layout_marginRight="@dimen/distance32"
        android:background="@color/colorPrimary"/>


    <LinearLayout
        style="@style/LoginItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance32"
        android:layout_marginRight="@dimen/distance32"
        android:background="@null">

        <TextView
            style="@style/BaseTextViewStyle"
            android:layout_width="@dimen/distance60"
            android:background="@null"
            android:text="新密码"/>

        <EditText
            android:id="@+id/et_pwd_new"
            style="@style/LoginEditTextStyle"
            android:background="@null"
            android:hint="@string/input_pwd_new"
            android:inputType="textPassword"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/distance32"
        android:layout_marginRight="@dimen/distance32"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        style="@style/LoginItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance32"
        android:layout_marginRight="@dimen/distance32"
        android:background="@null">

        <TextView
            style="@style/BaseTextViewStyle"
            android:layout_width="@dimen/distance60"
            android:background="@null"
            android:text="密码确认"/>

        <EditText
            android:id="@+id/et_pwd_new_confirm"
            style="@style/LoginEditTextStyle"
            android:background="@null"
            android:hint="@string/input_pwd_new_confirm"
            android:inputType="textPassword"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/distance32"
        android:layout_marginRight="@dimen/distance32"
        android:background="@color/colorPrimary"/>


    <Button
        android:id="@+id/btn_confirm"
        style="@style/ButtonStyle"
        android:layout_marginLeft="@dimen/distance32"
        android:layout_marginRight="@dimen/distance32"
        android:layout_marginTop="@dimen/distance48"
        android:text="@string/modify_confirm"/>

</LinearLayout>
